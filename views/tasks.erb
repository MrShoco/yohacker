<% @page_name="tasks" %>

<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1" style="margin-top: 20px">
      <table class="table">
        <thead>
          <tr>
            <th>#id</th>
            <th>Task Name</th>
            <th>TaskDifficulty</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>            
            <tr>
              <td><%= task.id %></td>
              <td><a href="/task/<%= task.id %>"><%= task.title %></a></td>
              <td><%= task.difficulty %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
