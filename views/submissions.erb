<% @page_name="submissions" %>

<% unless @submissions.empty? %>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1" style="margin-top: 20px">
      <table class="table">
        <thead>
          <tr>
            <th>Task name</th>
            <th>Result</th>
          </tr>
        </thead>
        <tbody>
          <% @submissions.reverse.each do |submission| %>            
            <tr>
              <td><a href="/task/<%= submission.task_id %>"><%= submission.task.title %></a></td>
              <td><%= submission.result %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %> 
  <div class="container">
	<div class="row">
    <div class="col-md-4 col-md-offset-4" style="margin-top: 20px">
      <h2><center>You have no submissions.</center></h2>
    </div>
  </div>
</div>
<% end %>

  
